<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
<display-name>Simple Web App</display-name>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>servlet1</servlet-name>
        <servlet-class>com.vnext.servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet2</servlet-name>
        <servlet-class>com.vnext.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet3</servlet-name>
        <servlet-class>com.vnext.servlet.UserInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet4</servlet-name>
        <servlet-class>com.vnext.servlet.ProductListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet5</servlet-name>
        <servlet-class>com.vnext.servlet.CreateProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet6</servlet-name>
        <servlet-class>com.vnext.servlet.EditProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet7</servlet-name>
        <servlet-class>com.vnext.servlet.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet8</servlet-name>
        <servlet-class>com.vnext.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet9</servlet-name>
        <servlet-class>com.vnext.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet10</servlet-name>
        <servlet-class>com.vnext.servlet.AjaxApiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servlet1</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet2</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet3</servlet-name>
        <url-pattern>/userInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet4</servlet-name>
        <url-pattern>/productList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet5</servlet-name>
        <url-pattern>/createProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet6</servlet-name>
        <url-pattern>/editProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet7</servlet-name>
        <url-pattern>/deleteProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet8</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet9</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet10</servlet-name>
        <url-pattern>/apicreateProduct</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>JDBCFilter</filter-name>
        <filter-class>com.vnext.filter.JDBCFilter</filter-class>
        <init-param>
            <param-name>dburl</param-name>
            <param-value>jdbc:jtds:sqlserver://localhost:1433/dbProduct;instance=SQLEXPRESS</param-value>
        </init-param>
        <init-param>
            <param-name>dbUser</param-name>
            <param-value>viethoang</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>hoang123</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>JDBCFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CookieFilter</filter-name>
        <filter-class>com.vnext.filter.CookieFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CookieFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>